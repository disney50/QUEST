<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_explore"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/avatar" />


    <TextView
        android:id="@+id/text_view_explorer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_view_explore"
        android:layout_alignStart="@+id/image_view_explore"
        android:layout_marginStart="48dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="Name" />

    <ImageView
        android:id="@+id/image_explorer_stripe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_view_explorer_name"
        android:layout_below="@+id/text_view_explorer_name"
        android:layout_marginStart="-5dp"
        app:srcCompat="@drawable/stripe_purple_56x0dp" />

    <TextView
        android:id="@+id/text_explorer_surname"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_view_explorer_name"
        android:layout_below="@+id/image_explorer_stripe"
        android:text="TextView"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image_view_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_view_explore"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/arrow_purple_24dp" />

</RelativeLayout>
